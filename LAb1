#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(int argc, char *argv[]){

    char *palabra = argv[1];
    char  *newPalabra;
    int i=0;
    int a = strlen (palabra);

    while (i<=a) {
        
        
        newPalabra[i] = palabra[a-1-i];
        i++;   
    }
   
    printf("Palabra invertida: %s\n", newPalabra);
    
    int result = strcmp(palabra, newPalabra);
    if (result == 0) {
        printf("Si son\n");
    } else {
        printf("no son xd\n");
    }
    
    return 0;

}
